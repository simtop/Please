<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewSko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            tools:text="SKO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewTotal"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="69dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewTotal"/>

    <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="189dp"
            android:layout_height="0dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Total Sum"
            app:layout_constraintTop_toBottomOf="@+id/textViewSko"
            android:layout_marginBottom="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewMoneyType"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textViewMoneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            tools:text="Money Type"
            app:layout_constraintTop_toBottomOf="@+id/textViewTotal" android:layout_marginBottom="292dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>